                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/kr"
                    android:textColor="#F29D38" />

                <TextView
                    android:id="@+id/tv_PriceLarge"
                    android:layout_width="wrap_content"
