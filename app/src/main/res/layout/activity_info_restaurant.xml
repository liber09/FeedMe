                app:layout_constraintEnd_toStartOf="@id/cb_type_Thai"
                app:layout_constraintTop_toBottomOf="@+id/cb_type_Lunch"/>

            <CheckBox
                android:tag="type"
                android:id="@+id/cb_type_Thai"
