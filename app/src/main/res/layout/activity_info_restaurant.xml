                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewRestaurant" />

            <CheckBox
                android:tag="type"
                android:id="@+id/cb_type_Afrikansk"
