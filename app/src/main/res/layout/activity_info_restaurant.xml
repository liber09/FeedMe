                app:layout_constraintEnd_toStartOf="@id/cb_type_Mexikansk"
                app:layout_constraintTop_toBottomOf="@+id/cb_type_Kinesisk"/>

            <CheckBox
                android:tag="type"
                android:id="@+id/cb_type_Mexikansk"
